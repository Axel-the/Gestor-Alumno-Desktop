{
  "name": "gestion-alumnos-desktop",
  "version": "1.0.0",
  "description": "Gestor de Alumnos Desktop App",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run vite\" \"npm run electron\"",
    "vite": "vite",
    "electron": "wait-on http://localhost:5173 && electron .",
    "build": "vite build",
    "dist": "npm run build && electron-builder",
    "preview": "vite preview"
  },
  "dependencies": {
    "lucide-react": "^0.469.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-is-dev": "^3.0.1",
    "vite": "^6.0.7",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.gestoralumno.app",
    "productName": "Gestor Alumno",
    "copyright": "Copyright Â© 2026",
    "directories": {
      "output": "dist-electron"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "logo.jpeg"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json",
      "logo.jpeg"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "shortcutName": "Gestor Alumno"
    }
  }
}